<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/appinfo_item"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/appinfo_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="6dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/appinfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/appinfo_image"
                android:layout_toStartOf="@id/appinfo_select"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/appinfo_package_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appinfo_name"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/appinfo_image"
                android:layout_toStartOf="@id/appinfo_select"
                android:textColor="#795548"/>

            <CheckBox
                android:id="@+id/appinfo_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>